            <label id="errFatherName" class="col-form-label-sm text-danger err" hidden>Please mention father name</label>
        </div>
        <div class="form-group col-4">

            @Html.LabelFor(m => m.spouse_name, "ಪತಿ/ಪತ್ನಿಯ ಹೆಸರು", new { @class = "knlan control-label" })
            @Html.LabelFor(m => m.spouse_name, "Spouse name", new { @class = "Enlan control-label" })<font color="red" id="asteriskES" style="display:none">*</font>
            @Html.TextBoxFor(m => m.spouse_name, new { @class = "form-control ClAlpha", id = "txtSpouseName", @maxlength = "200" })
