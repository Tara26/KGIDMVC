    </div>
    <div class="row col-12">
        <div class="form-group col-4">
            @Html.LabelFor(m => m.employee_name_kannada, "ಪ್ರಸ್ತಾಪಕರ ಹೆಸರು ಕನ್ನಡ (ಎಸ್‌ಎಸ್‌ಸಿ ಮೆಮೊ / ಸೇವಾ ದಾಖಲೆಯ ಪ್ರಕಾರ)", new { @class = "knlan control-label" })
