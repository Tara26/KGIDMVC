@model KGID_Models.NBApplication.VM_BasicDetails

<div id="divEditEmpPopup"
     data-save-url="@Url.Action("SaveEmployeeBasicDetails", "Employee", new { area = "" })">
    <div class="row col-12">
        @Html.HiddenFor(m => m.employee_id, new { id = "hdnEmpID" })
        <div class="form-group col-4">

            @Html.LabelFor(m => m.employee_name, "ಪ್ರಸ್ರಾವನೆದಾರರ ಹೆಸರು (ಸೇವಾ ಪುಸ್ತಕ/ಎಸ್‍.ಎಸ್‍.ಸಿ.ಮೆಮೊ ಪ್ರಕಾರ)", new { @class = "knlan control-label" })
