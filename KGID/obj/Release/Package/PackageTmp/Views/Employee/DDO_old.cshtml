@model KGID_Models.KGIDNBApplication.VM_DDOVerificationDetails

@{
    ViewBag.Title = "DDO";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h5 class="m-0 font-weight-bold text-primary"><b>Submitted Application For Verification</b></h5>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <h6 class="font-weight-bold">Pending for approval</h6>
                        </div>
                        <table class="table table-striped table-bordered" id="tblDDOData" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Employee Code</th>
                                    <th>Application Reference Number</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.EmployeeVerificationDetails != null && Model.EmployeeVerificationDetails.Count > 0)
                                {
                                    foreach (var item in Model.EmployeeVerificationDetails)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.EmployeeCode</td>
                                            <td>@item.ApplicationNumber</td>
                                            <td><a href="@Url.Action("DDOVerification", "VerifyDetails", new RouteValueDictionary(new { @empId = item.EmployeeCode }))" class="btn btn-info btn-sm" style="font-size: inherit;color: #FFF;padding: 0px 1px 1px 1px;">View Application</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <h6 class="font-weight-bold">Fowarded / Approved</h6>
                        </div>
                        <table class="table table-striped table-bordered" id="tblDDOApprovedData" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Employee Code</th>
                                    <th>Application Referance Number</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.LastUpdatedStatusForEmployees != null && Model.LastUpdatedStatusForEmployees.Count > 0)
                                {
                                    foreach (var item in Model.LastUpdatedStatusForEmployees)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.EmployeeCode</td>
                                            <td>@item.ApplicationNumber</td>
                                            <td>@item.Status</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblDDOData').DataTable();
        $('#tblDDOApprovedData').DataTable();
    });
</script>