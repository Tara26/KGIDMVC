@model KGID_Models.KGIDEmployee.VM_Employee
@{
    ViewBag.Title = "InsuredEmployee";
}

@using (Html.BeginForm("InsuredEmployee", "Employee", FormMethod.Post, new { id = "submitForm" }))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary"><label class="knlan">ಕೆ.ಜಿ.ಐ.ಡಿ ವಿಮೆ ಮಾಡಿದ ನೌಕರರ ವಿವರಗಳ ಹುಡುಕಾಟ</label> <label class="Enlan">KGID Insured Employee Details Search</label></h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>
                                <label class="knlan">ಕೆ.ಜಿ.ಐ.ಡಿ ಸಂಖ್ಯೆಯನ್ನು ನಮೂದಿಸಿ</label> <label class="Enlan">Enter KGID Number</label>
                            </label>
                            @*<input name="txtKGIDNo" type="text" class="form-control" id="txtKGIDNo" placeholder="">*@
                            @Html.TextBoxFor(model => model.KGIDNO, new { @class = "form-control", @id = "txtKgidNo", @maxlength = "15" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtOTP"></label><br />
                            <input type="button" id="btnAuth" class="btn btn-primary" value="Authenticate">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>
                                <label class="knlan">ಒಟಿಪಿ</label> <label class="Enlan">OTP</label>
                            </label>
                            <input name="txtOTP" type="text" class="form-control" id="txtOTP" placeholder="">
                        </div>
                        <div class="form-group col-md-6">

                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>
                                <label class="knlan">ಕ್ಯಾಪ್ಚಾ</label> <label class="Enlan">Captcha</label>
                            </label>
                            <input name="txtCaptcha" type="text" class="form-control" id="txtCaptcha" placeholder="">
                        </div>
                        <div class="form-group col-md-6">
                            <div class="form-group col-md-6">
                                <label>
                                    <label class="knlan">ಕ್ಯಾಪ್ಚಾ ನಮೂದಿಸಿ</label> <label class="Enlan">Enter Captcha</label>
                                </label>
                                <input name="txtECaptcha" type="text" class="form-control" id="txtECaptcha" placeholder="">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-10">
                        </div>
                        <div class="form-group col-md-2">
                            <button type="submit" class="btn btn-google">Search</button>
                        </div>
                    </div>
                    <div class="row">
                       
                        <table class="table table-striped table-bordered" id="tblInsuredEmployee" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th><label class="knlan">ಕೆ.ಜಿ.ಐ.ಡಿ ಸಂಖ್ಯೆ</label> <label class="Enlan">KGID NO.</label></th>
                                    <th><label class="knlan">ಹೆಸರು</label> <label class="Enlan">NAME</label></th>
                                    <th><label class="knlan">ತಂದೆಯ ಹೆಸರು</label> <label class="Enlan">FATHER'S NAME</label></th>
                                    <th><label class="knlan">ಲಿಂಗ</label> <label class="Enlan">GENDER</label></th>
                                    <th><label class="knlan">ಜನ್ಮ ದಿನಾಂಕ </label> <label class="Enlan">DOB</label></th>
                                    <th><label class="knlan">ಹುದ್ದೆ</label> <label class="Enlan">DESIGNATION</label></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    <tr>
                                        <td>@Model.GetDetails.id_kgid_policy_no</td>
                                        <td>@Model.GetDetails.id_emp_fullname</td>
                                        <td>@Model.GetDetails.id_father_name</td>
                                        <td>@Model.GetDetails.id_gender</td>
                                        <td>@Model.GetDetails.id_dob</td>
                                        <td>@Model.GetDetails.id_designation</td>
                                    </tr>
                                }
                                
</tbody>
                        </table>
                        
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="form-group col-sm-9">

                        </div>
                        <div class="form-group col-sm-2">
                            <label for=""></label><br />
                            <input type="button" id="btnNew" class="btn btn-primary" value="Apply For New Policy">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {


        $('#tblInsuredEmployee').DataTable({
            "scrollX": true
        });
    });
</script>
