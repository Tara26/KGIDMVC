                            </div>
                        </div>
                    </div>
                    <hr class="col-12" />
                    <div class="form-group col-12 text-right">
                        <input type="button" id="btnProceed" class="btn btn-primary" value="Proceed to Application &#x2192;" onclick="RedirectToApplication();" disabled data-app-url="@Url.Action("PolicyGeneration", "Employee", new { area = "", empId = Session["UID"]})" />
                    </div>
                }
            </div>
        </div>
