<script src="~/Content/bootbox.min.js"></script>
@*<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>*@
<script src="~/Scripts/VerifyDetails/DDVerification.js"></script>
<script src="~/Scripts/DigitalSignCerti.min.js"></script>
<script>
    function SignInWithDSC() {
        $(".err").hide();

        $(".chk-req").each(function () {
            if (!$(this).is(":checked")) {
                $(this).siblings(".err").show();
            }
        });

        var isCheckboxchecked = true;
        if ($(".err:visible").length > 0) {
            isCheckboxchecked = false;
            alert("Please Verify Details..!");
        }
        if (isCheckboxchecked) {
            $("#ResultDisplay").html("");

            if (!isBrowserSupportsExtension() || !isExtensionInstalled()) {
                $("#ResultDisplay").html("Please Download Chrome Extension.");
                return;
            }
            //Call method from Extension DSCSignRegSignedExtension to get Selected Certificate Subject and SerialNumber
            var authToken = $("").val();
            var empcode = $('#hdnEmployeeCode').val();
            //////
            var ViewModel = {
                "EmpCode": empcode, "ApplicationRefNo": $("#hdnAppCode").val(), "ApplicationId": $("#hdnAppCode").val(),
                "LoadFactor": $("#txtLoadFactor").val(), "DeductionLoadFactor": $("#txtDLoadFactor").val(), "SumAssured": $("#txtSumAssured").val()
                //,"PremiumAmount": $("#txtPrevRefNo").val()
            }
            //////
            DSCSignRegSignedExtension.getSelectedCertificate()       //or "SHA256"
                .then(
                    function (CertInfo) {
                        debugger;
                        //Success returns Certificate Subject and Thumbprint
                        //var data = JSON.parse(CertInfo);
                        //alert("CertThumbPrint received " + data.CertThumbPrint);
                        //alert(SignData);
                        var jobj = JSON.parse(CertInfo);
                        console.debug(CertInfo);
                        $("#SignedToken").val(jobj.PublicKey);
                        //Call Controller Method with CertSubject and SerialNumber
                        $.ajax({
                            url: "/Employee/DSCSignInKGID",
                            type: "POST",
                            data: JSON.stringify({
                                "Kgidno": empcode, "PublicKey": jobj.PublicKey, VerifiedDetails: ViewModel
                            }),
                            async: false,
                            contentType: 'application/json; charset=utf-8',
                            processData: false,
                            cache: false,
                            success: function (data) {
                                //Signing Operation Completed

                                if (data.IsSuccess == true) {
                                    $("#btnDDDSCSign").hide();
                                    $("#btnDDSubmit").show();
                                    $("#AppStatus").show();
                                    alertify.success("DSC SignIn Succesful.");
                                    //window.location.href = "/PdfSigning/Index";
                                }
                                else if (data.IsSuccess == false) {
                                    $("#btnDDDSCSign").show();
                                    //$("#btnDDSubmit").hide();
                                    alertify.error("DSC SignIn Failed..!");
                                }
                                else {
                                    $("#btnDDDSCSign").show();
                                    //$("#btnDDSubmit").hide();
                                    alertify.error("DSC SignIn Failed..!");
                                }
                            }
                        });
                    },
                    function (errmsg)       //Signing Host Returned Error.
                    {
                        $("#ResultDisplay").html(errmsg.message);
                    }
                );
        }
    };

</script>