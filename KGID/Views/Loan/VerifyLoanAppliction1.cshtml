
@{
    ViewBag.Title = "LoanApplictionDetails";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h5 class="m-0 font-weight-bold text-primary"><b>Verify Loan Details</b></h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-4">
                        Appliaction Referance Number:
                    </div>
                    <div class="form-group col-8">
                        __________________________________
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary text-center"><b>Application Details</b></h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        Eligibility Check
                    </div>
                    <div class="form-group col-8">
                        <label><input id="chkEligibility" type="checkbox" /> Verified</label>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-4">
                        Purpose Of Loan
                    </div>
                    <div class="form-group col-8">
                        <label><input id="chkLoanPurpose" type="checkbox" /> Verified</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        Application Verified
                    </div>
                    <div class="form-group col-8">
                        <label><input id="chkApplicationVerify" type="checkbox" /> Verified</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        Remarks
                    </div>
                    <div class="form-group col-4">
                        <textarea id="txtRemarks" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button id="btnSendBack" class="btn btn-info">Send Back</button>
                <button id="btnForward" class="btn btn-success">Forward</button>
            </div>
        </div>
    </div>
</div>