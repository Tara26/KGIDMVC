    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-header"><h4 class="card-title">Download Duplicate List</h4></div>
                <div class="card-body">
                    <div class="forms-sample">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="Import"></label>
                                <input type="submit" value="Download Duplicate File" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
