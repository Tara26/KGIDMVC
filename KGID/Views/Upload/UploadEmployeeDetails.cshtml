@using (Html.BeginForm("DownloadXLS", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    if (Session["dtError"] != null)
    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-header"><h4 class="card-title">Download Error List</h4></div>
                <div class="card-body">
                    <div class="forms-sample">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="Import"></label>
                                <input type="submit" value="Download Error File" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    if (TempData["Message"] != null && Session["dtDuplicate"] == null)
    {
        if (TempData["Message"].ToString() == "Succesfully Uploaded")
        {
            <input type="hidden" value="Employee data uploaded successfully" id="hdnUploadMsg" />
        }
        else
        {
            <input type="hidden" value="Error occured while uploading data" id="hdnUploadMsg" />
        }
    }
}
@using (Html.BeginForm("DownloadDuplicateXLS", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    if (Session["dtDuplicate"] != null)
    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-header"><h4 class="card-title">Download Duplicate List</h4></div>
                <div class="card-body">
                    <div class="forms-sample">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="Import"></label>
                                <input type="submit" value="Download Duplicate File" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
<div class="col-12 grid-margin stretch-card">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">                    
                    <label class="knlan control-label">ಅಪ್‍ಲೋಡ್‍ ಮಾಡಲಾದ ಮನವಿದಾರರ ವಿವರಗಳು</label>
                    <label class="Enlan control-label">Uploaded Employee Details</label>
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <table id="tblUploadedEmployeeDetails" class="table table-striped " cellspacing="0" style="width: 100%;"
                           data-url="@Url.Action("GetEmployeeData", "Upload", new { area = "" })"
                           data-edit-url="@Url.Action("EditUploadEmployeeDetails", "Employee", new { area = "" })"
                           data-delete-url="@Url.Action("DeleteUploadEmployeeDetails", "Upload", new { area = "" })">
                        <thead>
                            <tr>
                                <th><label class="knlan">ದಿನಾಂಕ</label><label class="Enlan">Date</label></th>
                                <th><label class="knlan">ಕ್ರಮ ಸಂಖ್ಯೆ</label><label class="Enlan">SL. NO.</label></th>
                                <th><label class="knlan">ಮನವಿದಾರರ ಹೆಸರು</label><label class="Enlan">Employee Name</label></th>
                                <th><label class="knlan">ಜನ್ಮ ದಿನಾಂಕ</label><label class="Enlan">Date of Birth</label></th>
                                <th><label class="knlan">ಲಿಂಗ</label><label class="Enlan">Gender</label></th>
                                <th><label class="knlan">ಮೊಬೈಲ್ ಸಂಖ್ಯೆ</label><label class="Enlan">Mobile Number</label></th>
                                <th><label class="knlan">ಇಮೇಲ್</label><label class="Enlan">Email</label></th>
                                <th><label class="knlan">ತಂದೆಯ ಹೆಸರು</label><label class="Enlan">Father Name</label></th>
                                <th><label class="knlan">ಇಲಾಖೆಯ ಹೆಸರು</label><label class="Enlan">Department Name</label></th>
                                <th><label class="knlan">ಕ್ರಮ</label><label class="Enlan">Action</label></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myUploadModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
