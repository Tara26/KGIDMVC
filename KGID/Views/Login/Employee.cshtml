@model KGID_Models.KGIDEmployee.VM_Employeelogin

@{
    ViewBag.Title = "KGID -Employee Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using (@Html.BeginForm("EmployeeLogin", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <img src="~/Content/Images/KGID_Logo.png" />
                                    </div>
                                    <div class="text-center">
                                        <br />
                                        @*<h4 class="h4 text-gray-900 mb-4">Welcome Back!</h4>*@
                                        <div class="row">
                                            <div class="form-group col-lg-12">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input" id="chkDepartment">
                                                    @*<label class="custom-control-label" for="chkDepartment"></label>*@

                                                    @Html.RadioButtonFor(x => x.EmployeeType, "1") <label class="knlan">ವಿಮೆ ಮಾಡಿದ ಉದ್ಯೋಗಿ</label><label class="Enlan">Insured Employee</label>

                                                    @Html.RadioButtonFor(x => x.EmployeeType, "2") <label class="knlan">ಹೊಸ ವಿಮಾದಾರರ</label><label class="Enlan">New Employee</label>
                                                </div>
                                            </div>
                                            @*<div class="form-group col-lg-6">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input" id="chkKGID">
                                                    <label class="custom-control-label" for="chkKGID">New Employee</label>
                                                </div>
                                            </div>*@
                                        </div>
                                    </div>
                                    <div class="user">
                                        <div class="form-group">
                                            <label><label class="knlan">ಮೊಬೈಲ್ ಸಂಖ್ಯೆ / ಇಮೇಲ್ ಐಡಿ</label><label class="Enlan">Mobile / Email</label></label>
                                            @*<input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address ...">*@
                                            @Html.TextBoxFor(x => x.um_mobile_email, new { @class = "form-control", placeholder = "MOBILE" })
                                        </div>
                                        <div class="form-group" style="text-align:right">
                                            <input name="submit" type="submit" id="btnOTP" value="Send OTP" class="btn btn-success" />
                                        </div>
                                        <div id="divEnterOtp" class="form-group">
                                            <label>OTP</label>
                                            @*<input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Enter Password ...">*@
                                            @Html.TextBoxFor(x => x.um_otp, new { @type = "Password", @class = "form-control", placeholder = "ENTER OTP" })
                                        </div>

                                        <div id="divSubmitOTP" class="form-group">
                                            <input name="submit" type="submit" id="btnSubmit" value="Submit" class="btn btn-success" />
                                        </div>
                                            <div class="my-2 d-flex justify-content-between align-items-center">
                                                <div class="form-check">
                                                    <label class="form-check-label text-muted">

                                                        @if (ViewBag.NotValidUser != null)
                                                        {
                                                            <h5><span class="text-danger">@ViewBag.NotValidUser</span></h5>
                                                        }

                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="text-center">
                                            <a class="small" href="forgot-password.html">Forgot Password?</a>
                                        </div>
                                        @*<div class="text-center">
            <a class="small" href="register.html">Create an Account!</a>
        </div>*@
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}