<script type="text/javascript">
    var damagecost;
    $(document).ready(function () {
        $("body .sumvalue").trigger("change");
        $("body .surveyorsumvalue").trigger("change");
        @*damagecost = '@Model.ODClaimApplicationDetails[0].OD_Claim_Damage_Cost'
        if (damagecost > 10000) {
            $("#SurveyorAssign").show();
