@model KGID_Models.KGID_Bonus.VM_BonusArrears

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"><b>Bonus Arrears</b></h6>
            </div>
            <div class="card-body">
                <table id="tblBonusDetails">
                    <thead>
                        <tr>
                            <th>Sl No</th>
                            <th>Claim reference Number</th>
                            <th>Name of employee</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.BonusArrears != null)
                        {
                            for (var i = 0; i < Model.BonusArrears.Count; i++)
                            {
                                <tr>
                                    <td>i+1</td>
                                    <td>@Model.BonusArrears[i].ClaimRefNumber</td>
                                    <td>@Model.BonusArrears[i].NameOfEmployee</td>
                                    <td><a href="@Url.Action("", "", new { claimId = Model.BonusArrears[i].ClaimId })">View Details</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#tblBonusDetails").DataTable({
        "ordering": false
    });
</script>
