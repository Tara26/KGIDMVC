        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: 100px;
        grid-gap: 20px;
        place-items: center;
    }

    .area {
        background-color: #eee;
        clear: both;
        padding-bottom: 35px;
        display: grid;
        border: none;
    }
</style>

