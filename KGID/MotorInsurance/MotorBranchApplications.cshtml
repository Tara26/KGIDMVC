@model KGID_Models.KGIDMotorInsurance.VM_MBApplicationDetails
@{
    ViewBag.Title = "MotorBranchApplications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h3 style="text-align:center">MotorBranchApplications</h3>*@

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Motor Branch Applications</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div id="divMBApplications" class="application-tab">
                    <section>
                        <div class="row">
                            <div class="col-12">
                                @*<div class="form-group">
                                        <h6 class="font-weight-bold">Application Status</h6>
                                    </div>*@
                                <table class="table table-striped table-bordered" id="tblMBApplications" cellspacing="0">
                                    <thead style="background: #308385;color: #fff;">
                                        <tr>
                                            <th>S.No.</th>
                                            @*<th>Employee <br />Code</th>
                                            <th>Application <br />Id</th>*@
                                            <th>Application <br />Reference Number</th>
                                            <th>Vehicle <br />Details</th>
                                            <th>Regisration <br />Number</th>
                                            <th>Policy <br />Number</th>
                                            <th>Policy <br />Premium Amount</th>
                                            <th>Policy <br />From Date</th>
                                            <th>Policy <br />To Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.MBApplicationDetails != null && Model.MBApplicationDetails.Count > 0)
                                        {
                                            foreach (var item in Model.MBApplicationDetails)
                                            {
                                        <tr>
                                            <td>@item.RowNumber</td>
                                            @*<td>@item.EmployeeCode</td>
                                            <td>@item.ApplicationId</td>*@
                                            <td>@item.ApplicationNumber</td>
                                            <td>@item.VehicleManufactureName @item.VehicleModelName</td>
                                            <td>@item.RegisrationNumber</td>
                                            <td>@item.PolicyNumber</td>
                                            <td>@item.PolicyPremiumAmount</td>
                                            <td>@(item.From_Date.HasValue ? item.From_Date.Value.ToString("dd/MM/yyyy") : "")</td>
                                            <td>@(item.To_Date.HasValue ? item.To_Date.Value.ToString("dd/MM/yyyy") : "")</td>
                                        </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </section>
                </div>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $('#tblMBApplications').DataTable();
    });
</script>